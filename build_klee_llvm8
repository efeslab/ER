      -DCMAKE_LIBRARY_PATH=${INSTALL_BASE}/lib \
      -DCMAKE_LIBRARY_PATH_FLAG=${INSTALL_BASE}/lib \
      -DCMAKE_BUILD_TYPE=Debug\
